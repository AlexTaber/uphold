<div class="live-arrow" id="carousel-left">
  <i class="fa fa-chevron-left"></i>
</div>
<div class="live-arrow" id="carousel-right">
  <i class="fa fa-chevron-right"></i>
</div>
<div class="dots">
  <i class="fa fa-circle" id="dot-0"></i>
  <i class="fa fa-circle" id="dot-1"></i>
  <i class="fa fa-circle" id="dot-2"></i>
</div>

<div class="live-header-container">
  <% @events[0..2].each_with_index do |event, index| %>
    <div class="live-header-background" style="background: url('<%= event.images.first.url %>'); background-size:cover;">
      <div class="live-header">
        <%= link_to live_path do %>
          <div class="live-header-content">
            <h5><%= event.start_date_to_s %> </h5>
            <h6><%= "#{event.start_time_to_s} @ #{event.venue.name}" %></h6>
            <% event.headliners.each do |headliner| %>
              <h3><%= headliner.band.name %></h3>
            <% end %>
            <h6>
              <% event.openers.each_with_index do |opener, i| %>
                <%= opener.band.name %>
                <% unless event.openers.count == i + 1 %>
                  |
                <% end %>
              <% end %>
            </h6>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="live-filler-container">
  <p>See All Events <i class="fa fa-arrow-down"></i></p>
</div>