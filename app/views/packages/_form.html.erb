<%= form_for package do |f| %>
  <div>
    <%= f.label :name  %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description  %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :price  %>
    <%= f.text_field :price %>
  </div>

  <div>
    <%= f.submit %>
  </div>

  <%= f.hidden_field :event_id, value: event.id %>
<% end %>
