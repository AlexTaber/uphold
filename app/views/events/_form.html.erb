<%= form_for event do |f| %>
  <div>
    <%= f.label :name  %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description  %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :start_time  %>
    <%= f.datetime_select :start_time %>
  </div>

  <div>
    <%= f.label :end_time  %>
    <%= f.datetime_select :end_time %>
  </div>

  <div>
    <%= f.label :total_headliners, "Number of Headliners"  %>
    <%= f.number_field :total_headliners, min: 1 %>
  </div>

  <div>
    <%= label_tag :image, "Upload an Image" %>
    <%= f.file_field :file, multiple: true  %>
  </div>

  <div>
    <%= f.label :venue_id %>
    <%= f.collection_select(:venue_id, Venue.all, :id, :name, prompt: "Select Venue") %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>